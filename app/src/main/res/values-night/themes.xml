<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.USATUNav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#171626</item>
        <item name="colorPrimaryDark">#171626</item>
        <item name="colorAccent">#F5F6FA</item>
        <item name="colorSecondary">#5046B3</item>
        <item name="cardBackground">#201d2e</item>
        <item name="strokeColor">#6f6f79</item>
        <item name="android:candidatesTextStyleSpans">candidates</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>

        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="Theme.USATUNav.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.USATUNav">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>